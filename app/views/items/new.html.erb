<%= @session.name %>
<%= @session.item_type %>
<% count = 1 %>
<% while count <= 12 %>
  <% if @session["criterion_#{count}"] != "unused"%>
    <%= @session["criterion_#{count}"] %>
    <% criteria_num = count %>
  <% end %>
  <% count += 1 %>
<% end %>
<%= simple_form_for [@session, @session.items.build] do |f| %>
  <%= f.input :name, label: @session.item_type %>
  <%= f.input :type, as: :hidden, value: @session.item_type %>
  <% count = 1 %>
  <% while count <= criteria_num %>
    <%= f.input :"grouping_#{count}", label: @session["criterion_#{count}"], collection: Item::GROUPINGS %>
    <% count += 1 %>
  <% end %>
<%= f.submit %>
<%= link_to "Existing evaluation sessions", sessions_path, class: 'button' %>
<% end %>
